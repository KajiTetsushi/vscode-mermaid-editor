{
	"name": "mermaid-editor",
	"displayName": "mermaid-editor",
	"description": "editor for mermaid.js",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.mermaidgen"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.mermaidgen",
				"title": "mmd: generate"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "extension.mermaidgen",
					"when": "resourceExtname == .mmd"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"tslint-check": "tslint-config-prettier-check ./tslint.json"
	},
	"prettier": {
		"singleQuote": true
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"prettier": "^1.17.0",
		"tslint": "^5.12.1",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"mermaid.cli": "^0.5.1"
	}
}
