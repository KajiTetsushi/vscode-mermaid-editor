{
	"name": "mermaid-editor",
	"displayName": "mermaid-editor",
	"description": "editor for mermaid.js",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:mermaid-editor.generate"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration":[
			{
				"type": "object",
				"title": "mermaid-editor configuration",
				"properties": {
					"mermaid-editor.theme": {
						"type": "string",
						"default": "default",
						"description": "color theme for mermaid.js"
					},
					"mermaid-editor.backgroundColor": {
						"type": "string",
						"default": "white",
						"description": "background color of the output page. Defailt: 'white'"
					},
					"mermaid-editor.format": {
						"type": "string",
						"default": "svg",
						"description": "output file format [svg, png, pdf]"
					},
					"mermaid-editor.outputPath": {
						"type": ["string", "null"],
						"default": null,
						"description": "relative path of the output target directory from project root"
					},
					"mermaid-editor.width": {
						"type": "integer",
						"default": "800",
						"description": "width of the output page. Default: 800"
					},
					"mermaid-editor.height": {
						"type": "integer",
						"default": "600",
						"description": "height of the output page. Default: 600"
					}
				}
			}
		],
		"commands": [
			{
				"command": "mermaid-editor.generate",
				"title": "Generate mermaid doc",
				"icon": {
					"light": "./images/icon-generate.png",
					"dark": "./images/icon-generate.png"
				}
			}
		],
		"keybindings":[
			{
				"command": "mermaid-editor.generate",
				"key": "ctrl+alt+o"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resourceExtname == .mmd",
					"command": "mermaid-editor.generate",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"when": "resourceExtname == .mmd",
					"command": "mermaid-editor.generate",
					"group": "navigation"
				}
			],
			"commandPalette": [
				{
					"command": "mermaid-editor.generate",
					"when": "resourceExtname == .mmd"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"tslint-check": "tslint-config-prettier-check ./tslint.json"
	},
	"prettier": {
		"singleQuote": true
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"prettier": "^1.17.0",
		"tslint": "^5.12.1",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"@types/lodash": "^4.14.123",
		"lodash": "^4.17.11",
		"mermaid.cli": "^0.5.1"
	}
}
